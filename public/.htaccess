<IfModule mod_rewrite.c>
  RewriteEngine On

  # Si la solicitud es para el index.html, no hacer nada
  RewriteRule ^index\.html$ - [L]

  # Si el archivo o directorio solicitado existe, servirlo directamente
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d

  # Para todo lo demás, servir index.html (permitir que Angular maneje las rutas)
  RewriteRule . /index.html [L]
</IfModule>

# Configuración de seguridad adicional
<IfModule mod_headers.c>
  # Prevenir clickjacking
  Header always set X-Frame-Options "SAMEORIGIN"

  # Prevenir MIME sniffing
  Header always set X-Content-Type-Options "nosniff"

  # Activar XSS protection
  Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Habilitar compresión gzip
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache control para archivos estáticos
<IfModule mod_expires.c>
  ExpiresActive On

  # Imágenes
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # CSS y JavaScript (con hash en el nombre, pueden cachearse por mucho tiempo)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"

  # HTML (no cachear para que siempre se obtenga la última versión)
  ExpiresByType text/html "access plus 0 seconds"
</IfModule>
